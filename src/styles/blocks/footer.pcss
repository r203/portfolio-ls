.footer {
    &__left {
        display: flex;
        @include desktop {
            flex-direction: column;
          }
    }
    &__row {
        display: flex;
        flex-direction: row;
        &:not(:last-child) {
            margin-bottom: 70px;
        }
    }
    display: flex;
    flex-direction: row;
    &__copyright {
        margin-right: 60px;
        @include desktop {
            margin-bottom: 25px;
          }
    }
    &__author {
        width: 150px;
        margin-right: 165px;
    }
    &__about {
        opacity: .3;
        margin-bottom: 30px;
    }
    &__socials {
        .socials {
            &__item {
                border: 1px solid #fff;
                border-radius: 50%;
                opacity: .3;
            }
            &__link {
                width: 48px;
                height: 48px;
                padding: 10px;
            }
        }
    }
    &__about-socials {
        margin-right: 190px;
        @include desktop {
            margin-right: 55px;
          }
    }
}