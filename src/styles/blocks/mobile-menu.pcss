.mobile-menu {
    position: absolute;
    display: none;
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
    padding: 70px;
    top: 0;
    right: 0;
    bottom: 0;
    z-index: 1;
    background-color: $text-color;
    &--active {
        display: flex;
    }
    @include phones {
        left: 0;
      }
}