.user-info {
    display: flex;
    flex-direction: column;
    align-items: center;
    &__avatar {
        width: 200px;
        margin-bottom: 75px;
    }
    &__data-item {
        display: block;
        margin-right: 80px;
        opacity: .15;
        font-weight: 600;
    }
    &__data {
        border-spacing: 1em;
    }
}