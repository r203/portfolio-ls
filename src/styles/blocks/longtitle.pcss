.longtitle {
    display: flex;
    flex-direction: column;
    @include tablets {
        align-items: center;
      }
    &__title {
        font-size: 30px;
        font-weight: 600;
        margin-bottom: 70px;
        @include tablets {
            max-width: 85%;
          }
    }
    &__text {
        font-weight: 600;
        opacity: .5;
    }
}