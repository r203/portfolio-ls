.school {
    width: 22%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    @include tablets {
        width: 100%;
        align-items: center;
        text-align: center;
        max-width: 460px;
    }
    @include phones {
        max-width: 85%;
    }
    &__title {
        font-size: 30px;
        font-weight: 600;
        color: #353e4f;
        margin-bottom: 55px;
        @include phones {
            align-self: flex-start;
        }
    }
    &__text {
        color: #333c49;
        font-weight: 600;
        margin-bottom: 55px;
        @include phones {
            text-align: left;
        }
    }
    &__site {
        @include phones {
            align-self: flex-start;
        }
    }
    &__link {
        font-weight: 600;
        color: #586ed3;
        text-decoration: none;
        &:hover {
            text-decoration: underline;
        }
        &:before {
            content: '';
            display: inline-flex;
            width: 15px;
            height: 15px;
            background: url(../images/icons/link.png) center center/cover no-repeat;
            margin-right: 20px;
        }
    }
}