.nav {
  color: #414c63;
  background-color: #fff;
  margin-bottom: 56px;
  &__list {
    display: flex;
  }
  &__item {
    border-bottom: 2px solid transparent;
    &:hover {
      color: #383bcf;
      font-weight: 600;
      border-bottom: 2px solid #383bcf;

    }
  }
  &__link {
    display: block;
    font-weight: 600;
    padding: 30px;
    text-decoration: none;
  }
}