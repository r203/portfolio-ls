.works {
  margin-bottom: 60px;
  &__container {
    display: flex;
    flex-direction: column;
  }
  &__list {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    margin-left: -30px;
  }
  &__item {
    width: calc(100% / 3 - 30px);
    margin-left: 30px;
    max-height: 560px;
    margin-bottom: 30px;
    @include tablets {
      width: calc(100% / 2 - 30px);
    }
    @include phones {
      width: 100%;
    }
  }
}
