.upload {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  /* временное решение - переделать */
  height: 275px; 
  /* height: 100%; */
  max-height: 275px;
  background-color: #dee4ed;
  border: 1px dashed rgba(31, 35, 45, .15);
  text-align: center;
  line-height: 30px;
  padding: 0px 90px;
  transition: all.3s;
  &:hover {
    background-color: #e4e7ec;
  }
  &__desc {
    color: #414c63;
    font-weight: 600;
    margin-bottom: 30px;
  }
}